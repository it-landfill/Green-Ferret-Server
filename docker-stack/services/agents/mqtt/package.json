    "license": "GPL-3.0",
    "dependencies": {
        "@influxdata/influxdb-client": "^1.33.2",
        "mqtt": "^4.3.7"
    },
    "devDependencies": {
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}